<%= form_with(model: [restaurant, review], local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :rating %>
    <%= form.select :rating, options_for_select(0..5) %>
  </div>
  <div class="mb-3">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <%= form.submit "Ajouter Avis", class: "btn btn-primary" %>
<% end %>
